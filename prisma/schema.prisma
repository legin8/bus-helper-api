// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Agency {
  code          String    @id @unique
  region        String
  url           String
  phone         String
  routes        Route[]
}

model Route {
  title           String
  locations       String
  key             Int       @unique
  agencyCode      String
  agency          Agency    @relation(fields: [agencyCode], references: [code])
  services        Service[]
  @@id([title, agencyCode])
}

model Service {
  code            String
  name            String
  routeTitle      String
  key 	          Int
  agencyCode      String
  route           Route     @relation(fields: [routeTitle, agencyCode], references: [title, agencyCode])
  trips           Trip[]
  @@id([code, agencyCode])
}

model Trip {
  serviceCode     String
  id              Int
  name            String
  agencyCode      String
  service         Service @relation(fields: [serviceCode, agencyCode], references: [code, agencyCode])
  times           Times[]
  @@id([serviceCode, id, agencyCode])
}

model Times {
  serviceCode      String
  tripId           Int
  stop             Int
  time             String
  stopsCode        String
  agencyCode       String
  trip             Trip    @relation(fields: [serviceCode, tripId, agencyCode], references: [serviceCode, id, agencyCode])
  timeStop         TimesStops[]
  @@id([serviceCode, tripId, agencyCode, stop])
}

model TimesStops {
  serviceCode     String
  tripId          Int
  agencyCode      String
  timeStop        Int
  stopsCode       String
  time            Times     @relation(fields: [serviceCode, tripId, agencyCode, timeStop], references: [serviceCode, tripId, agencyCode, stop])
  stop            Stops     @relation(fields: [stopsCode], references: [code])
  @@id([serviceCode, tripId, stopsCode, agencyCode])
}

model Stops {
  code            String  @id
  id              Int
  name            String
  stopAlias       String?
  timeStop        TimesStops[]
}